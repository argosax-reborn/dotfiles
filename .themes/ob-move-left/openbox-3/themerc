window.active.grip.bg.border.color: #e7e7e7

! To make the icon appearing in the titlebar less blurry, (the mupdf
! icon in particular suffers from the issue,) it needs to be made
! slightly larger.  A border of the same color as the background is
! added in order to achieve this.  If not for the added border, the
! label background could actually be defined as parentrelative.
! Parentrelative means that the element inherits its colors from the
! textures behind it as is, in essence, completely transparent.
window.active.label.bg: flat border solid
window.active.label.bg.color: #3465a4
window.active.label.bg.border.color: #3465a4
window.active.label.text.color: #ffffff

window.*.button.*.bg: parentrelative
window.active.button.*.image.color: #efefef
window.active.button.*.hover.image.color: #ffffff
window.active.button.*.pressed.image.color: #a7cef2
window.active.button.disabled.image.color: #6d8fbc

!! Inactive

window.inactive.title.bg.color: #dcdcdc

window.inactive.handle.bg.color: #dcdcdc

window.inactive.grip.bg: parentrelative

window.inactive.label.bg: flat border solid
window.inactive.label.bg.color: #dcdcdc
window.inactive.label.bg.border.color: #dcdcdc
window.inactive.label.text.color: #888a85

window.inactive.button.*.image.color: #888a85
window.inactive.button.disabled.image.color: #d0d0d0

!! On-screen dialogs

osd.*.label.bg: parentrelative
